	<script type="text/javascript" src="js/main.js"></script>
  <script src="/socket.io/socket.io.js"></script>
	<script type="text/javascript" src="js/jquery-3.5.1.min.js"></script>
	<script src="js/moment-with-locales.min.js"></script>



	<script>

		$(document).ready(function(){

      const socket = io('http://localhost:8000');

			moment.locale("es");
			$('#enviarMsg').on('click', function(){

				let emiture = `
						<div class="w-message w-message-out">
							<div class="w-message-text">
								<p>${ $("#mensajesEmisor").val() }</p>
								<div class="time">${ moment().format('HH:mm') }</div>
							</div>
						</div>
          `;
        
				$('#chat').append(emiture);

				//console.log($("#mensajesEmisor").val());
        
        const inf = { 
          nombre: '<%=user.name%>',
          mensaje: $("#mensajesEmisor").val(),
          hora: moment().format('HH:mm')          
        };
        console.log('enviando inf');
        console.log(inf);
        
        socket.emit('enviandoMsn', inf);
        
        $("#mensajesEmisor").val('');
      });

      $('#mensajesEmisor').on("keydown", function(e){
				if(e.keyCode == 13) {

          $('#enviarMsg').trigger('click');

				};
			});



      socket.on('compartiendoMsn', function(inf){
        console.log(inf);
        console.log(inf.nombre);

        let recepture = `
          <div class="w-message w-message-in">
            <div class="w-message-text">
              <h5 class="blue-1">${inf.nombre}</h5>
              <p>${inf.mensaje}</p>
              <div class="time">${inf.hora}</div>
            </div>
          </div>
          `;
        
        $('#chat').append(recepture);

      });



    });


	</script>
