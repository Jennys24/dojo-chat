						<li class="col-xs-10 w-write-message-item w-write-message-input">
							<input type="text" name="w-message-input" class="w-write-message-field"
								placeholder="Escribe tu mensaje aquí" id="mensajesEmisor" required>
						</li>
						<li class="col-xs-1 w-write-message-item"><i class="fa fa-paper-plane fa-2x" id="enviarMsg" aria-hidden="true"></i></li>

