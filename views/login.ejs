<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coding-Dojo Chat</title>
    <link rel="stylesheet" href="css/bootstrap5.min.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/toastr.min.css">

    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/toastr.min.js"></script>
    <script src="/js/bootbox.min.js"></script>
    <script src="/js/moment-with-locales.min.js"></script>
    <link rel="stylesheet" href="css/misestilos.css">
    


<body id="fondo-login">

    <h1 class="fw-bolder text-center mt-4" style="color: #128C7E;">Dojo Chat</h1>
    <p class="fst-italic text-center mt-2">sistema de mensajería instantanea</p>
  
    <div class="container">
      <div class="row">
  
        <div id="divLogin" class="col col-5 bg-light mt-2 p-4 border border-2 rounded-3">
          <!-- Formulario Login con Bootstrap-->
          <form id="form-login" action="/login" method="POST"class="px-4 py-3">
            <h4>Login</h4>
            <div class="mb-3">
              <p>Para ingresar en su tablero privado</p>
              <label for="emaillog" class="form-label">Email</label>
              <input type="email" class="form-control" id="emaillog" name="email" placeholder="email@example.com" required>
            </div>
            <div class="mb-3 d-grid gap-2">
              <label for="post" name="elogueado" class="form-label">Contraseña</label>
              <input type="password" class="form-control" name="password" id="password0" placeholder="password" required>
            </div>
            <div class="d-grid gap-2 mt-4">
              <input type="submit" class="btn btn-success">
            </div>
            <div class="d-grid gap-2 mt-3">
              <a href="/register" class="btn btn-outline-success" ">Crea una cuenta</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  
    
    <script>
      $(document).ready(function () {
        
        // Acá mostramos todos los posibles errores de los formularios
        //toastr.info('probando errores');
        <% for (var error of errors) { %>
          toastr.error('<%=error%>');
        <% } %>
        $('#form-register').on('submit', function(){
          const contrasenia = $('#password').val();
          const confirmacion = $('#password_confirm').val();
          if (contrasenia != confirmacion){
            toastr.error('Las contraseñas no coinciden');
            return false;
          }
        });
        
      });
  
    </script>
  </body>
  </html>